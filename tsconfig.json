{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2016",
    "outDir": "./dist/",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["dom", "esnext"],
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "example"]
}
